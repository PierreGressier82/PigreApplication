<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:text="@string/hello_pgr"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/activity_main_quizz_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="@string/quizz"/>

    <Button
        android:id="@+id/activity_main_comptes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="@string/comptes"/>

    <Button
        android:id="@+id/activity_main_games_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:padding="30dp"
        android:text="@string/jeux_de_societes"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/activity_todo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:padding="30dp"
        android:text="@string/todo"
        android:textColor="#FFFFFF" />
</LinearLayout>